@model ResetPasswordViewModel

@{
    ViewBag.Title = "Reset your password";
    Layout = "_Layout";
}

<h2>Reset password</h2>

<form method="post" class="container">
    <div asp-validation-summary="ModelOnly"></div>
    <p class="text-success">@ViewBag.Message</p>
    <label for="email">Email: <input type="email" asp-for="Email"/></label>
    <span asp-validation-for="Email" class="text-warning"></span>
    <label for="token">Token: <input asp-for="Token"/></label>
    <span asp-validation-for="Token" class="text-warning"></span>
    <label for="Password">Token: <input type="password" asp-for="Password" /></label>
    <span asp-validation-for="Password" class="text-warning"></span>
    <button type="submit">Submit</button>
</form>